<p id="notice"><%= notice %></p>

<h1>Encomendas</h1>

<table>
  <thead>
    <tr>
      <th>Remetente</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @encomendas.each do |encomenda| %>
      <tr>
        <td><%= encomenda.remetente %></td>
        <td><%= encomenda.data %></td>
        <th colspan="4"></th>
        <td><%= link_to 'detalhes', encomenda %></td>
        <td><%= link_to 'editar', edit_encomenda_path(encomenda) %></td>
        <td><%= link_to 'excluir', encomenda, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Encomenda', new_encomenda_path, class: "text-decoration-none" %>
